{
  "extends": "@unconfig/ts-config/node.esm.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@qumran/*": ["packages/web/node/*/src"]
    },
    "composite": true,
    "noImplicitAny": false
  },
  "include": [
    "**/build.config.ts",
    "**/scripts/**/*",
    "scripts/**/*",
    "packages/**/*",
    "packages/**/*.json",
    "packages/**/typings/**/*",
    "typings/**/*"
  ],
  "exclude": [
    "**/__tests__/**",
    "**/tests/**",
    "node_modules",
    "**/dist",
    "**/*.md"
  ]
}
