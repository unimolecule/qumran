{
  "extends": "@unconfig/ts-config/vitest.vue3.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@qumran/*": ["packages/web/components/*/src"]
    },
    "composite": true
  },
  "include": [
    "**/vitest.config.*",
    "packages/**/__tests__/**/*",
    "packages/**/tests/**/*",
    "packages/**/*",
    "packages/**/*.json",
    "packages/**/typings/**/*",
    "typings/**/*"
  ],
  "exclude": ["node_modules", "**/dist", "**/*.md"]
}
